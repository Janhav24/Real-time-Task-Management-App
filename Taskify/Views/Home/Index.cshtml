@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager


@{
    ViewData["Title"] = "Home";
    <head>
            <link rel="stylesheet" href="~/css/home.css">
    </head>
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="hero d-flex align-items-center">

    <div class="container">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center">
                <h1 data-aos="fade-up">Taskify makes tasks easier, faster and simpler</h1>
                <h2 data-aos="fade-up" data-aos-delay="400">Elevate your team's productivity with Taskify - the smart and simple way to manage tasks and projects.</h2>
                <div data-aos="fade-up" data-aos-delay="600">
                    <div class="text-center text-lg-start">
                            @if (!SignInManager.IsSignedIn(User))
                            {
                            <a href="/Identity/Account/Register" class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center">
                                <span>Join us</span>
                                <i class="bi bi-arrow-right"></i>
                                </a>
                            }
                            else{
                            <a href="/Projects/Index" class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center">
                                <span>Your projects</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                            }

                    </div>
                </div>
            </div>
            <div class="col-lg-6 hero-img" data-aos="zoom-out" data-aos-delay="200">
                <img src="~/images/hero-img.jpg" class="img-fluid" alt="">
            </div>
        </div>
    </div>

</section><!-- End Hero -->

<main id="main">
   
    
    
    <!-- ======= Services Section ======= -->
    <section id="services" class="services">

        <div class="container" data-aos="fade-up">

            <header class="section-header">
                <h2>Services</h2>
                <p>Taskify meets all your needs</p>
            </header>

            <div class="row gy-4">

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-box blue">
                        <i class="ri-discuss-line icon"></i>
                        <h3>Task and project management</h3>
                        <p>Users can create, assign, and track tasks and projects within Taskify, with features like due dates, comments, and more.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                    <div class="service-box orange">
                        <i class="ri-discuss-line icon"></i>
                        <h3>Collaboration</h3>
                        <p>Taskify has features that allow users to share tasks, collaborate on projects, and communicate with each other in real-time.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                    <div class="service-box green">
                        <i class="ri-discuss-line icon"></i>
                        <h3>Integrations</h3>
                        <p>Taskify integrates with a variety of other apps and tools, such as Google Calendar and Asana, to help users manage their work more efficiently.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="500">
                    <div class="service-box red">
                        <i class="ri-discuss-line icon"></i>
                        <h3>Mobile app</h3>
                        <p>Taskify has a mobile app that is available for iOS and Android devices, allowing users to manage their tasks and projects on the go.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="600">
                    <div class="service-box purple">
                        <i class="ri-discuss-line icon"></i>
                        <h3>Customization</h3>
                        <p>Taskify allows users to customize their experience by creating personalized task lists, setting up custom tags and labels, and creating their own workflows.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="700">
                    <div class="service-box pink">
                        <i class="ri-discuss-line icon"></i>
                        <h3>Reporting and analytics</h3>
                        <p>Taskify provides users with detailed reports and analytics on their tasks and projects, helping them to track their progress and identify areas for improvement.</p>
                    </div>
                </div>

            </div>

        </div>

    </section><!-- End Services Section -->
    
    <!-- ======= F.A.Q Section ======= -->
    <section id="faq" class="faq">

        <div class="container" data-aos="fade-up">

            <header class="section-header">
                <h2>F.A.Q</h2>
                <p>Frequently Asked Questions</p>
            </header>

            <div class="row">
                <div class="col-lg-6">
                    <!-- F.A.Q List 1-->
                    <div class="accordion accordion-flush" id="faqlist1">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq-content-1">
                                    How much does Taskify cost?
                                </button>
                            </h2>
                            <div id="faq-content-1" class="accordion-collapse collapse" data-bs-parent="#faqlist1">
                                <div class="accordion-body">
                                    Taskify offers a range of pricing options, including a free plan and various paid plans with additional features.

                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq-content-2">
                                    Is there a mobile app for Taskify?
                                </button>
                            </h2>
                            <div id="faq-content-2" class="accordion-collapse collapse" data-bs-parent="#faqlist1">
                                <div class="accordion-body">
                                    Yes, Taskify has a mobile app that is available for iOS and Android devices.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq-content-3">
                                    How does Taskify work?
                                </button>
                            </h2>
                            <div id="faq-content-3" class="accordion-collapse collapse" data-bs-parent="#faqlist1">
                                <div class="accordion-body">
                                    Taskify is a cloud-based task management platform that allows users to create, assign, and track tasks and projects. It features a variety of tools and integrations that help users stay organized and on top of their work.
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-lg-6">

                    <!-- F.A.Q List 2-->
                    <div class="accordion accordion-flush" id="faqlist2">

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2-content-1">
                                    Is Taskify easy to use?
                                </button>
                            </h2>
                            <div id="faq2-content-1" class="accordion-collapse collapse" data-bs-parent="#faqlist2">
                                <div class="accordion-body">
                                    Yes, Taskify is designed to be user-friendly and intuitive, with a straightforward interface and helpful tutorials.

                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2-content-2">
                                    Is Taskify compatible with other apps and tools?
                                </button>
                            </h2>
                            <div id="faq2-content-2" class="accordion-collapse collapse" data-bs-parent="#faqlist2">
                                <div class="accordion-body">
                                    Taskify integrates with a variety of other apps and tools, including Google Calendar, Asana, and Trello.

                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2-content-3">
                                    Can Taskify be used by teams?
                                </button>
                            </h2>
                            <div id="faq2-content-3" class="accordion-collapse collapse" data-bs-parent="#faqlist2">
                                <div class="accordion-body">
                                    Yes, Taskify is a great tool for teams, with features that allow users to share tasks, collaborate on projects, and communicate with each other.

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </section><!-- End F.A.Q Section -->
    
    

</main><!-- End #main -->
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
