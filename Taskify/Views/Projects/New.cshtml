@model Taskify.Models.Project
@{
    ViewBag.Title = "Create A New Project";
}


<h2 class="text-center mt-5">Add a project</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "New", controllerName: "Projects", method: FormMethod.Post))
            {
                @Html.Label("Title", "Project Title") <!-- Aici numele de "Title" TREBUIE inlocuit-->
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(m => m.Title, null, new{@class = "text-danger"})
                <br />
                @Html.Label("Description", "Project Description")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })
                <br />
                
                
                @Html.ValidationSummary(false, "", new { @class = "textdanger" })
                <br />
                <button class="btn" type="submit">
                    Create
                </button>
            }
        </div>
    </div>
</div>