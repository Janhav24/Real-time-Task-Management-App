@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    <link rel="stylesheet" href="~/css/logs.css">

}
<section class = "log">
    <header class="section-header">
        <h2>Register</h2>
        <p>Create a new account</p>
    </header>
    <div class="container">

        <div class="row justify-content-between">
            <div class="col-md-4 align-self-center">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="logform">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="first name" aria-required="true" maxlength = "100"/>
                    <label asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="last name" aria-required="true" maxlength = "100" />
                    <label asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="buton w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
            <div class="col-lg-6 pic-log justify-content-center" data-aos="zoom-out" data-aos-delay="200">
            <img src="~/images/register.jpg" class="img-fluid" alt="">
        </div>
    </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
